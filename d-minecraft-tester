#!/bin/bash

echo
echo "#######################################################"
echo "#####################  BUILD  #########################"
echo "#######################################################"
echo

docker build -t minecraft-server-test .

echo
echo "#######################################################"
echo "######################  RUN  ##########################"
echo "#######################################################"
echo

docker run \
	-d \
	--rm \
	-p 25565:25565 \
	-p 8123:8123 \
	--name minecraft-server \
	minecraft-server-test
